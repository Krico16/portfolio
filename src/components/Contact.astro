---
import portfolioData from '../data/portfolio.json';
---

<style>
  @import '../styles/contact.css';
  @import '../styles/terminal.css';

</style>

<!-- Contact Section -->
<section id="contact" class="section">
  <div class="prompt-line">
    <span class="prompt">krico@portfolio:~$ </span>
    <span class="command">cat contact.md</span>
  </div>
  <div class="command-output">
    <h3>📞 Información de Contacto</h3>
    <div class="contact-info">
      <div class="contact-item">
        <span class="contact-icon">📧</span>
        <span class="contact-label">Email:</span>
        <a href={`mailto:${portfolioData.email}`}>{portfolioData.email}</a>
      </div>
      <div class="contact-item">
        <span class="contact-icon">🐙</span>
        <span class="contact-label">GitHub:</span>
        <a href={portfolioData.github} target="_blank">{portfolioData.github}</a>
      </div>
      <div class="contact-item">
        <span class="contact-icon">💼</span>
        <span class="contact-label">LinkedIn:</span>
        <a href={portfolioData.linkedin} target="_blank">{portfolioData.linkedin}</a>
      </div>
      <div class="contact-item">
        <span class="contact-icon">📍</span>
        <span class="contact-label">Ubicación:</span>
        <span>{portfolioData.location}</span>
      </div>
    </div>
    <div class="contact-message">
      <p>💬 ¡No dudes en contactarme para colaboraciones o oportunidades!</p>
    </div>
  </div>
</section>